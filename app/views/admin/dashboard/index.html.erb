<% content_for :header do %>
  <%= time_of_day_greeting %>, Admin
<% end %>

<div class="w-full h-full flex flex-col lg:flex-row items-center gap-2"> 
  <div class="w-full lg:w-1/2 h-full lg:px-2 lg:border-r-2 lg:border-gray-600 flex flex-col">
    <div class="relative h-1/2 w-full flex items-center justify-center bg--frosted overflow-hidden">
      <%= render 'devise/invitations/send_invite_form' %>
      <%#= image_tag('Coming_soon.png', alt: "bg photo", class: "absolute top-auto left-auto opacity-25 w-[70%] z-0 aspect-1") %>
      <%#= link_to 'Invite a trader', new_user_invitation_path, class: "actions uppercase z-10" %>
    </div>

    <div class="h-auto w-full py-2">
      <%= render 'recent_approvals' %>
    </div>
  </div>

  <div class="w-full lg:w-1/2 h-full flex flex-col items-center gap-2">
    <%= render 'pending_approvals' %>
  </div>
</div>