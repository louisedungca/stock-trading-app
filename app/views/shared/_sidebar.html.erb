<%= render 'shared/dash_navbar' %>

<aside id="logo-sidebar" class="fixed top-0 left-0 z-10 w-64 h-screen pt-20 transition-transform -translate-x-full border-r sm:translate-x-0 bg-stone-950 border-gray-700 font-sans" aria-label="Sidebar">
