         <li class="<%= @trader_status != "approved" ? "hidden" : "" %>">
            <a href="#" class="flex items-center p-2 rounded-lg text-white hover:bg-gray-700 group">
               <svg class="w-5 h-5 transition duration-75 text-gray-400 group-hover:text-gray-900 :group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 21">
