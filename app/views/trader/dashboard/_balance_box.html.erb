<div class="bg--frosted border-2 border-gray-600 w-full flex items-center justify-between p-4">
  <div class="flex flex-col gap-2">
    <h2 class="font-bold font-sans tracking-widest">Account Balance</h2>
    <h1 class="text-xl sm:text-3xl flex items-end gap-2">
      <%= format_currency(current_user.balance, unit: "$") %>
      <small class="text-sm p-1 font-sans">USD</small>
    </h1>
  </div>
  <div class="flex items-center justify-between gap-2">
    <%= link_to "Cash-in", trader_cash_in_path, data: { turbo_frame: 'cash_in_modal' }, class: "button--secondary" %>
    <%= link_to "Withdraw", trader_withdraw_path, data: { turbo_frame: 'withdraw_modal' }, class: "button--secondary" %>
  </div>
</div>
