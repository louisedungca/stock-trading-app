<div class="rounded-xl border-2 border-gray-600 w-full flex items-center justify-between px-4 py-6">
  <div class="flex flex-col gap-2">
    <h2 class="font-bold font-sans tracking-widest opacity-70">Account Balance</h2>
    <div class="flex gap-2 items-end">
      <h1 class="text-xl sm:text-3xl flex gap-1">    
        <small class="text-sm p-1 font-sans">$</small>  
        <%= format_currency(current_user.balance) %>
      </h1>
      <small class="text-sm p-1 font-sans">USD</small>  
    </div>
    
  </div>
  <div class="flex items-center justify-between gap-2">
    <%= link_to "Cash-in", trader_cash_in_path, data: { turbo_frame: 'cash_in_modal' }, class: "modal__button button--green mt-0" %>
    <%= link_to "Withdraw", trader_withdraw_path, data: { turbo_frame: 'withdraw_modal' }, class: "modal__button button--purple mt-0" %>
  </div>
</div>
