<div class="border-2 border-gray-600 w-full min-h-fit rounded-2xl flex flex-col p-4">
  <h1 class="font-bold font-sans tracking-widest">
    <%= link_to trader_portfolio_path do %>
      <%= @stocks.size > 1 ? "My Assets" : "My Asset" %>
    <% end %>    
  </h1>

  <div class="w-full grid--autofill">
    <% @stocks.each do |stock| %>
      <%= render 'pages/widgets/solo_ticker', symbol: stock.stock_symbol %>
    <% end %>
  </div>  
</div>